{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<div id="tag" class="container">
    {{#tag}}
    <main>
        <h2>{{name}}</h2>
        {{#if feature_image}}
        <img src={{img_url feature_image}} alt={{name}}>
        {{/if}}
        {{description}}
    </main>
    {{/tag}}
    {{#foreach posts}}
    {{> "post-card"}}
    {{/foreach}}
</div>